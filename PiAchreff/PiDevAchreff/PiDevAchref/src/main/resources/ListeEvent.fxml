        </columns>
    </TableView>

    <DatePicker fx:id="datePicker" layoutX="393.0" layoutY="25.0" prefHeight="25.0" prefWidth="150.0" />
    <Button layoutX="559.0" layoutY="25.0" mnemonicParsing="false" onAction="#rechercherParDate" text="Rechercher par date" />

