<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="411.0" prefWidth="716.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controler.AfficheListeEventControler">
    <children>
        <Label layoutX="50.0" layoutY="20.0" text="Liste des événements">
            <font>
                <Font size="24.0" />
            </font>
        </Label>

        <TableView fx:id="eventsTableView" layoutX="50.0" layoutY="62.0" onMouseClicked="#handleEventDoubleClick" prefHeight="300" prefWidth="592.0">
            <columns>
                <TableColumn fx:id="titleColumn" text="Titre" />
                <TableColumn fx:id="typeColumn" text="Type" />
                <TableColumn fx:id="startDateColumn" prefWidth="98.39996337890625" text="Date de début" />
                <TableColumn fx:id="endDateColumn" prefWidth="77.5999755859375" text="Date de fin" />
                <TableColumn fx:id="ticketPriceColumn" prefWidth="95.20001220703125" text="Prix du ticket" />
                <TableColumn fx:id="ticketCountColumn" text="Nombre de tickets" />
                <TableColumn fx:id="imageColumn" text="Image">
                    <!-- Add your cellValueFactory and cellFactory here -->
                </TableColumn>
            </columns>

        </TableView>

        <Button layoutX="524.0" layoutY="377.0" mnemonicParsing="false" onAction="#reserverEvent" prefHeight="34.0" prefWidth="90.0" text="Réserver" />
      <Button layoutX="85.0" layoutY="382.0" mnemonicParsing="false" onAction="#Home" text="Home" />
    </children>
</AnchorPane>
