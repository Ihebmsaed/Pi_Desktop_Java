<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="800" prefHeight="600">

    <FlowPane prefWidth="800" prefHeight="600" hgap="20" vgap="20">
        <!-- Placeholder for event items -->
        <VBox fx:id="eventContainer" prefWidth="200" prefHeight="300" style="-fx-background-color: #f4f4f4;">
            <ImageView fitWidth="200" fitHeight="150" pickOnBounds="true" preserveRatio="true">
                <image>

                </image>
            </ImageView>
            <Label fx:id="titleLabel" text="Event Title" wrapText="true" style="-fx-font-weight: bold;" />
            <Label fx:id="dateLabel" text="Date: DD/MM/YYYY" />
            <Label fx:id="ticketLabel" text="Tickets Available: 0" />
            <Label fx:id="priceLabel" text="Price: $0.00" />
        </VBox>
    </FlowPane>
</AnchorPane>
